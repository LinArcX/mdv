{
    "adapters": {
        "lldb-vscode": {
            "attach": {
                "pidProperty": "pid",
                "pidSelect": "ask"
            },
            "command": [
                "${LLDB_VSCODE}"
            ],
            "env": {
                "LLDB_LAUNCH_FLAG_LAUNCH_IN_TTY": "YES"
            },
            "name": "lldb"
        }
    },
    "configurations": {
        "<name>: Launch": {
            "adapter": "lldb-vscode",
            "configuration": {
                "name": "<name>",
                "type": "cppdbg",
                "request": "launch",
                "program": "${workspaceRoot}/debug/${NAME}",
                "args": ["README.md"],
                "cwd": "${workspaceRoot}",
                "externalConsole": true,
                "stopAtEntry": true,
                "MIMode": "lldb"
            }
        },
        "<name>: Attach": {
            "adapter": "lldb-vscode",
            "configuration": {
                "name": "<name>: Attach",
                "type": "cppdbg",
                "request": "attach",
                "program": "${workspaceRoot}/debug/${NAME}",
                "MIMode": "lldb"
            }
        }
    }
}
